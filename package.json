{
    "name": "vigour-example",
    "version": "1.0.10",
    "description": "Example vigour app",
    "main": "index.js",
    "scripts": {
        "start": "./node_modules/.bin/gaston dev",
        "build": "./node_modules/.bin/gaston build; ./node_modules/vigour-native-plugin/node_modules/.bin/vNative build",
        "ios": "./node_modules/.bin/gaston build; ./node_modules/vigour-native-plugin/node_modules/.bin/vNative build -p ios",
        "android": "./node_modules/.bin/gaston build; ./node_modules/vigour-native-plugin/node_modules/.bin/vNative build -p android",
        "samsungtv": "./node_modules/.bin/gaston build; ./node_modules/vigour-native-plugin/node_modules/.bin/vNative build -p samsungtv",
        "test": "./node_modules/.bin/gaston test",
        "release": "packer -r -c package.json,.package.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vigour-io/vigour-example.git"
    },
    "keywords": [
        "vigour",
        "example"
    ],
    "author": "Vigour",
    "license": "ISC",
    "contributors": [
        "Shawn Inder <shawn@vigour.io>",
        "Alexander Van Der Werff <alex@vigour.io>",
        "Michiel Van Liempt <michiel@vigour.io>",
        "Renan Carvalho <renan@vigour.io>",
        "Andre Padez <andre@vigour.io>"
    ],
    "engines": {

    },
    "bugs": {
        "url": "https://github.com/vigour-io/vigour-example/issues"
    },
    "homepage": "https://github.com/vigour-io/vigour-example",
    "dependencies": {
        "vigour-native-plugin": "git+ssh://git@github.com:vigour-io/vigour-native-plugin.git",
        "vigour-native-plugintest": "git+ssh://git@github.com:vigour-io/vigour-native-plugintest.git",
        "vigour-native-statusBar": "git+ssh://git@github.com:vigour-io/vigour-native-statusBar.git"
    },
    "devDependencies": {
        "gaston": "git+ssh://git@github.com:vigour-io/gaston.git#dev",
        "vigour-packer-server": "git+ssh://git@github.com:vigour-io/vigour-packer-server.git"
    },
    "vigour": {
        "native": {
            "platforms": {
                "ios": {
                    "productName": "Vigour Example",
                    "organizationName": "Vigour",
                    "organizationIdentifier": "io.vigour.example",
                    "buildNumber": "1",
                    "appIndexPath": "build.html",
                    "appIcon": "assets/img/appIcon.png",
                    "splashScreen": "assets/img/splash.png"
                },
                "android": {
                    "productName": "Vigour Example",
                    "applicationId": "io.vigour.example",
                    "appIndexPath": "build.html",
                    "appIcon": "assets/img/appIcon.png",
                    "splashScreen": "assets/img/splash.png",
                    "splashDuration": 1500,
                    "keystoreFile": "example.keystore",
                    "keystorePassword": "shmexample",
                    "keystoreAlias": "blabla"
                },

                "samsungtv": {
                    "productName": "Vigour Samsung Example",
                    "xmlConfig": {
                        "category": "video",
                        "name": "Vigour",
                        "author": "Vigour",
                        "description": "Vigour",
                        "version": "1.0.0",
                        "ThumbIcon": "assets/img/appIcon.png",
                        "BigThumbIcon": "assets/img/appIcon.png",
                        "ListIcon": "assets/img/appIcon.png",
                        "BigListIcon": "assets/img/appIcon.png"
                    }
                },
                "lgtv": {
                    "productName":"Vigour LG Example"
                }
            }
        },
        "packer": {
            "web": "build.html",
            "assets": {
                "build.html": true,
                "build.js": true,
                "build.css": true,
                "assets": "*"
            }
        }
    },
    "gaston": {
        "port": 8080,
        "socket-port": 9000,
        "no-auto-reload": false,
        "no-package": false,
        "bundle": "./",
        "build": "./",
        "browserify": {
            "transforms": []
        },
        "less": {
            "options": {}
        },
        "smaps": "true",
        "source-maps": true,
        "smaps": true,
        "remote-logging": true,
        "require-paths": {}
    }
}
